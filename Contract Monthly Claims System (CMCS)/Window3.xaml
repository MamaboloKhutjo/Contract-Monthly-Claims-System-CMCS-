<Window x:Class="Contract_Monthly_Claims_System__CMCS_.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CMCS - Lecturer Dashboard" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Color Resources -->
        <Color x:Key="PrimaryBlue">#001a4d</Color>
        <Color x:Key="DarkBlue">#00308F</Color>
        <Color x:Key="SuccessGreen">#00a86b</Color>
        <Color x:Key="WarningYellow">#FFB800</Color>
        <Color x:Key="ErrorRed">#ff4d4d</Color>
        <Color x:Key="LightGray">#F5F7F9</Color>

        <!-- SolidColorBrush Resources -->
        <SolidColorBrush x:Key="PrimaryBlueBrush" Color="{StaticResource PrimaryBlue}"/>
        <SolidColorBrush x:Key="DarkBlueBrush" Color="{StaticResource DarkBlue}"/>
        <SolidColorBrush x:Key="SuccessGreenBrush" Color="{StaticResource SuccessGreen}"/>
        <SolidColorBrush x:Key="WarningYellowBrush" Color="{StaticResource WarningYellow}"/>
        <SolidColorBrush x:Key="ErrorRedBrush" Color="{StaticResource ErrorRed}"/>
        <SolidColorBrush x:Key="LightGrayBrush" Color="{StaticResource LightGray}"/>
        <SolidColorBrush x:Key="WhiteBrush" Color="White"/>
        <SolidColorBrush x:Key="DarkGrayBrush" Color="#333333"/>
        <SolidColorBrush x:Key="MediumGrayBrush" Color="#666666"/>
        <SolidColorBrush x:Key="BorderGrayBrush" Color="#eeeeee"/>

        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource DarkGrayBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Border Style -->
        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
        </Style>

        <!-- Status Background Style -->
        <Style x:Key="StatusStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="Text" Value="Approved">
                    <Setter Property="Background" Value="{StaticResource SuccessGreenBrush}"/>
                </Trigger>
                <Trigger Property="Text" Value="Pending">
                    <Setter Property="Background" Value="{StaticResource WarningYellowBrush}"/>
                </Trigger>
                <Trigger Property="Text" Value="Rejected">
                    <Setter Property="Background" Value="{StaticResource ErrorRedBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Main Content Area -->
        <Grid Grid.Column="1" Background="{StaticResource LightGrayBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar -->
            <Border Grid.Row="0" Background="{StaticResource WhiteBrush}" CornerRadius="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Lecturer Dashboard" 
                               VerticalAlignment="Center" 
                               Margin="20,0"
                               FontSize="22" 
                               FontWeight="Bold"
                               Foreground="{StaticResource DarkGrayBrush}"/>

                    <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right" Margin="20,0">
                        <TextBlock Text="Dr. John Smith" VerticalAlignment="Center" Margin="10,0,20,0" Foreground="{StaticResource DarkGrayBrush}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Dashboard Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <!-- Quick Actions -->
                    <Border Margin="0,0,0,20">
                        <StackPanel Margin="15">
                            <TextBlock Text="Quick Actions" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" Foreground="{StaticResource DarkGrayBrush}"/>

                            <WrapPanel>
                                <Button Content="Submit New Claim" Background="{StaticResource PrimaryBlueBrush}" Foreground="White" 
                                        Width="180" Height="45" Margin="0,0,15,10" FontWeight="Bold" FontSize="14"/>
                                <Button Content="View My Claims" Background="{StaticResource WhiteBrush}" Foreground="{StaticResource PrimaryBlueBrush}" 
                                        Width="180" Height="45" Margin="0,0,15,10" BorderBrush="#cccccc" BorderThickness="1" FontSize="14"/>
                            </WrapPanel>
                        </StackPanel>
                    </Border>

                    <!-- My Claims Summary -->
                    <TextBlock Text="My Claims Summary" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" Foreground="{StaticResource DarkGrayBrush}"/>

                    <WrapPanel>
                        <!-- Total Claims Card -->
                        <Border Margin="0,0,15,15" Width="200" Height="100">
                            <StackPanel Margin="15">
                                <TextBlock Text="Total Claims" Foreground="{StaticResource MediumGrayBrush}" FontSize="14"/>
                                <TextBlock Text="15" FontSize="28" FontWeight="Bold" Margin="0,5,0,0" Foreground="{StaticResource PrimaryBlueBrush}"/>
                            </StackPanel>
                        </Border>

                        <!-- Pending Claims Card -->
                        <Border Margin="0,0,15,15" Width="200" Height="100">
                            <StackPanel Margin="15">
                                <TextBlock Text="Pending" Foreground="{StaticResource MediumGrayBrush}" FontSize="14"/>
                                <TextBlock Text="3" FontSize="28" FontWeight="Bold" Margin="0,5,0,0" Foreground="{StaticResource PrimaryBlueBrush}"/>
                            </StackPanel>
                        </Border>

                        <!-- Approved Claims Card -->
                        <Border Margin="0,0,15,15" Width="200" Height="100">
                            <StackPanel Margin="15">
                                <TextBlock Text="Approved" Foreground="{StaticResource MediumGrayBrush}" FontSize="14"/>
                                <TextBlock Text="10" FontSize="28" FontWeight="Bold" Margin="0,5,0,0" Foreground="{StaticResource PrimaryBlueBrush}"/>
                                <TextBlock Text="$2,450 total" Foreground="{StaticResource SuccessGreenBrush}" Margin="0,2,0,0" FontSize="12"/>
                            </StackPanel>
                        </Border>

                        <!-- Rejected Claims Card -->
                        <Border Margin="0,0,15,15" Width="200" Height="100">
                            <StackPanel Margin="15">
                                <TextBlock Text="Rejected" Foreground="{StaticResource MediumGrayBrush}" FontSize="14"/>
                                <TextBlock Text="2" FontSize="28" FontWeight="Bold" Margin="0,5,0,0" Foreground="{StaticResource PrimaryBlueBrush}"/>
                            </StackPanel>
                        </Border>
                    </WrapPanel>

                    <!-- Recent Claims Section -->
                    <Border Margin="0,20,0,0">
                        <StackPanel Margin="15">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBlock Text="My Recent Claims" FontSize="18" FontWeight="Bold" Foreground="{StaticResource DarkGrayBrush}"/>
                                <Button Content="View All" Foreground="{StaticResource PrimaryBlueBrush}" BorderThickness="0" 
                                        HorizontalAlignment="Right" Margin="20,0,0,0" Padding="0"/>
                            </StackPanel>

                            <DataGrid Height="250" AutoGenerateColumns="False" IsReadOnly="True" 
                                      HeadersVisibility="Column" BorderThickness="0" SelectionMode="Single">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Claim ID" Width="100"/>
                                    <DataGridTextColumn Header="Contract" Width="*"/>
                                    <DataGridTextColumn Header="Submitted" Width="120"/>
                                    <DataGridTextColumn Header="Amount" Width="120"/>
                                    <DataGridTextColumn Header="Status" Width="120">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock" BasedOn="{StaticResource StatusStyle}"/>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTemplateColumn Header="Actions" Width="150">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Content="View" Background="{StaticResource PrimaryBlueBrush}" Foreground="White" 
                                                            Padding="8,3" Margin="0,0,5,0" FontSize="12"/>
                                                    <Button Content="Retract" Background="{StaticResource ErrorRedBrush}" Foreground="White" 
                                                            Padding="8,3" FontSize="12"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>

                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource BorderGrayBrush}"/>
                                    </Style>
                                </DataGrid.RowStyle>

                               
                            </DataGrid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>