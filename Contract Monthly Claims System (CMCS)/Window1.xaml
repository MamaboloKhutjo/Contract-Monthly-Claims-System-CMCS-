<Window x:Class="Contract_Monthly_Claims_System__CMCS_.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CMCS - Management Dashboard" Height="655" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Color x:Key="PrimaryBlue">#001a4d</Color>
        <Color x:Key="DarkBlue">#00308F</Color>
        <Color x:Key="SuccessGreen">#00a86b</Color>
        <Color x:Key="WarningYellow">#FFB800</Color>
        <Color x:Key="ErrorRed">#ff4d4d</Color>
        <Color x:Key="LightGray">#F5F7F9</Color>

        <SolidColorBrush x:Key="PrimaryBlueBrush" Color="{StaticResource PrimaryBlue}"/>
        <SolidColorBrush x:Key="DarkBlueBrush" Color="{StaticResource DarkBlue}"/>
        <SolidColorBrush x:Key="SuccessGreenBrush" Color="{StaticResource SuccessGreen}"/>
        <SolidColorBrush x:Key="WarningYellowBrush" Color="{StaticResource WarningYellow}"/>
        <SolidColorBrush x:Key="ErrorRedBrush" Color="{StaticResource ErrorRed}"/>
        <SolidColorBrush x:Key="LightGrayBrush" Color="{StaticResource LightGray}"/>
        <SolidColorBrush x:Key="WhiteBrush" Color="White"/>
        <SolidColorBrush x:Key="DarkGrayBrush" Color="#333333"/>
        <SolidColorBrush x:Key="MediumGrayBrush" Color="#666666"/>
        <SolidColorBrush x:Key="BorderGrayBrush" Color="#eeeeee"/>

        <Style TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource DarkGrayBrush}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Border">
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background" Value="{StaticResource WhiteBrush}"/>
        </Style>

        <Style x:Key="StatusStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="Text" Value="Approved">
                    <Setter Property="Background" Value="{StaticResource SuccessGreenBrush}"/>
                </Trigger>
                <Trigger Property="Text" Value="Pending">
                    <Setter Property="Background" Value="{StaticResource WarningYellowBrush}"/>
                </Trigger>
                <Trigger Property="Text" Value="Rejected">
                    <Setter Property="Background" Value="{StaticResource ErrorRedBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1" Background="{StaticResource LightGrayBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#001a4d" CornerRadius="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Management Dashboard" 
                               VerticalAlignment="Center" 
                               Margin="20,0"
                               FontSize="22" 
                               FontWeight="Bold"
                               Foreground="white"/>

                    <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right" Margin="20,0">
                        <!-- Changed from "Program Coordinator" to display current user's name -->
                        <TextBlock Text="{Binding CurrentUserName}" 
               VerticalAlignment="Center" 
               Margin="10,0,20,0" 
               Foreground="White"
               FontSize="14"
               FontWeight="SemiBold"/>

                        <!-- Add Logout Button -->
                        <Button Content="Logout" 
            Background="Transparent" 
            Foreground="White" 
            BorderBrush="White" 
            BorderThickness="1"
            Padding="10,5"
            FontSize="12"
            FontWeight="SemiBold"
            Cursor="Hand"
            Click="LogoutButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <TextBlock Text="Claims Overview" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" Foreground="{StaticResource DarkGrayBrush}"/>

                    <WrapPanel>
                        <Border Margin="0,0,15,15" Width="250" Height="120">
                            <StackPanel Margin="15">
                                <TextBlock Text="Pending Approval" Foreground="{StaticResource MediumGrayBrush}" FontSize="14"/>
                                <TextBlock Text="{Binding ClaimsSummary.PendingClaims}" FontSize="32" FontWeight="Bold" Margin="0,5,0,0" Foreground="{StaticResource PrimaryBlueBrush}"/>
                                <TextBlock Text="Requires attention" Foreground="{StaticResource WarningYellowBrush}" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Margin="0,0,15,15" Width="250" Height="120">
                            <StackPanel Margin="15">
                                <TextBlock Text="Approved Claims" Foreground="{StaticResource MediumGrayBrush}" FontSize="14"/>
                                <TextBlock Text="{Binding ClaimsSummary.ApprovedClaims}" FontSize="32" FontWeight="Bold" Margin="0,5,0,0" Foreground="{StaticResource PrimaryBlueBrush}"/>
                                <TextBlock Text="This month" Foreground="{StaticResource SuccessGreenBrush}" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Margin="0,0,15,15" Width="250" Height="120">
                            <StackPanel Margin="15">
                                <TextBlock Text="Rejected Claims" Foreground="{StaticResource MediumGrayBrush}" FontSize="14"/>
                                <TextBlock Text="{Binding ClaimsSummary.RejectedClaims}" FontSize="32" FontWeight="Bold" Margin="0,5,0,0" Foreground="{StaticResource PrimaryBlueBrush}"/>
                                <TextBlock Text="This month" Foreground="{StaticResource ErrorRedBrush}" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Margin="0,0,15,15" Width="250" Height="120">
                            <StackPanel Margin="15">
                                <TextBlock Text="Total Claims" Foreground="{StaticResource MediumGrayBrush}" FontSize="14"/>
                                <TextBlock Text="{Binding ClaimsSummary.TotalClaims}" FontSize="32" FontWeight="Bold" Margin="0,5,0,0" Foreground="{StaticResource PrimaryBlueBrush}"/>
                                <TextBlock Text="All time" Foreground="{StaticResource PrimaryBlueBrush}" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </WrapPanel>

                    <Border Margin="0,20,0,0">
                        <StackPanel Margin="15">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <TextBlock Text="Pending Claims Approval" FontSize="18" FontWeight="Bold" Foreground="{StaticResource DarkGrayBrush}"/>
                                <Button Content="View All" Foreground="{StaticResource PrimaryBlueBrush}" BorderThickness="0" 
                                        HorizontalAlignment="Right" Margin="20,0,0,0" Padding="0"
                                        Click="ViewAllPendingClaims_Click"/>
                                
                            </StackPanel>

                            <DataGrid Height="250" AutoGenerateColumns="False" IsReadOnly="True" 
                                      HeadersVisibility="Column" BorderThickness="0" SelectionMode="Single"
                                      ItemsSource="{Binding PendingClaims}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Claim ID" Binding="{Binding ClaimId}" Width="100"/>
                                    <DataGridTextColumn Header="Lecturer" Binding="{Binding LecturerName}" Width="150"/>
                                    <DataGridTextColumn Header="Contract" Binding="{Binding ContractName}" Width="*"/>
                                    <DataGridTextColumn Header="Submitted" Binding="{Binding FormattedDate}" Width="120"/>
                                    <DataGridTextColumn Header="Amount" Binding="{Binding FormattedAmount}" Width="120"/>
                                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120">
                                        
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock" BasedOn="{StaticResource StatusStyle}"/>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTemplateColumn Header="Actions" Width="300">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Content="View" Background="{StaticResource PrimaryBlueBrush}" Foreground="White" 
                                                            Padding="10,5" Margin="0,0,5,0" FontSize="12"
                                                            Click="ViewClaim_Click"/>
                                                    <Button Content="Approve" Background="{StaticResource SuccessGreenBrush}" Foreground="White" 
                                                            Padding="10,5" Margin="0,0,5,0" FontSize="12"
                                                            Click="ApproveClaim_Click"/>
                                                    <Button Content="Reject" Background="{StaticResource ErrorRedBrush}" Foreground="White" 
                                                            Padding="10,5" FontSize="12"
                                                            Click="RejectClaim_Click"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>

                                <DataGrid.RowStyle>
                                    <Style TargetType="DataGridRow">
                                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                        <Setter Property="BorderBrush" Value="{StaticResource BorderGrayBrush}"/>
                                    </Style>
                                </DataGrid.RowStyle>
                            </DataGrid>
                        </StackPanel>
                    </Border>

                    
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>