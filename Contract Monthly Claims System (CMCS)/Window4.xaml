<Window x:Class="Contract_Monthly_Claims_System__CMCS_.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contract_Monthly_Claims_System__CMCS_"
        mc:Ignorable="d"
        Title="My Claims - CMCS" Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <Color x:Key="PrimaryBlue">#001a4d</Color>
        <Color x:Key="SuccessGreen">#00a86b</Color>
        <Color x:Key="WarningYellow">#FFB800</Color>
        <Color x:Key="ErrorRed">#ff4d4d</Color>

        <SolidColorBrush x:Key="PrimaryBlueBrush" Color="{StaticResource PrimaryBlue}"/>
        <SolidColorBrush x:Key="SuccessGreenBrush" Color="{StaticResource SuccessGreen}"/>
        <SolidColorBrush x:Key="WarningYellowBrush" Color="{StaticResource WarningYellow}"/>
        <SolidColorBrush x:Key="ErrorRedBrush" Color="{StaticResource ErrorRed}"/>
        <SolidColorBrush x:Key="WhiteBrush" Color="White"/>

        <Style x:Key="StatusStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="Text" Value="Approved">
                    <Setter Property="Background" Value="{StaticResource SuccessGreenBrush}"/>
                </Trigger>
                <Trigger Property="Text" Value="Pending">
                    <Setter Property="Background" Value="{StaticResource WarningYellowBrush}"/>
                </Trigger>
                <Trigger Property="Text" Value="Rejected">
                    <Setter Property="Background" Value="{StaticResource ErrorRedBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#F5F7F9">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBlueBrush}" Padding="20">
            <StackPanel>
                <TextBlock Text="My Claims" 
                           Foreground="White" 
                           FontSize="24" 
                           FontWeight="Bold"/>
                <TextBlock Text="View all your submitted claims" 
                           Foreground="#CCFFFFFF" 
                           FontSize="14" 
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Claims DataGrid -->
        <DataGrid Grid.Row="1" 
                  x:Name="ClaimsDataGrid"
                  Margin="20" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True" 
                  HeadersVisibility="Column" 
                  BorderThickness="1"
                  BorderBrush="#DDDDDD"
                  Background="White"
                  SelectionMode="Single"
                  RowDetailsVisibilityMode="VisibleWhenSelected" SelectionChanged="ClaimsDataGrid_SelectionChanged">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Claim ID" Binding="{Binding ClaimId}" Width="100"/>
                <DataGridTextColumn Header="Contract" Binding="{Binding ContractName}" Width="*"/>
                <DataGridTextColumn Header="Submitted Date" Binding="{Binding FormattedDate}" Width="120"/>
                <DataGridTextColumn Header="Amount" Binding="{Binding FormattedAmount}" Width="120"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource StatusStyle}"/>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="BorderThickness" Value="0,0,0,1"/>
                    <Setter Property="BorderBrush" Value="#EEEEEE"/>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.RowDetailsTemplate>
                <DataTemplate>
                    <Border Background="#F8F9FA" Margin="10" Padding="15" CornerRadius="5" BorderThickness="1" BorderBrush="#DEE2E6">
                        <StackPanel>
                            <TextBlock Text="Claim Details" FontWeight="Bold" FontSize="14" Foreground="{StaticResource PrimaryBlueBrush}" Margin="0,0,0,10"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Claim ID:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ClaimId}" Margin="0,0,0,5"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Contract:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ContractName}" Margin="0,0,0,5"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Description:" FontWeight="SemiBold" Margin="0,0,10,5"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Description}" TextWrapping="Wrap" Margin="0,0,0,5"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Submitted:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SubmittedDate, StringFormat='dd/MM/yyyy HH:mm'}" Margin="0,0,0,0"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </DataGrid.RowDetailsTemplate>
        </DataGrid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="White" BorderThickness="1,0,0,0" BorderBrush="#DDDDDD" Padding="15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Close" 
                        Background="#6C757D" 
                        Foreground="White" 
                        Width="80" 
                        Height="35" 
                        FontWeight="SemiBold"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
