<Window x:Class="Contract_Monthly_Claims_System__CMCS_.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contract_Monthly_Claims_System__CMCS_"
        mc:Ignorable="d"
        Title="CMCS - Sign Up" Height="850" Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="BorderBrush" Value="LightGray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="5" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="4,0,0,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="BorderBrush" Value="LightGray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border CornerRadius="5" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="4,0,0,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
      
    </Window.Resources>

    <Grid Background="#F5F7F9">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Grid Grid.Row="0" Background="Black">
            <Label Content="Contract Monthly Claims System (CMCS)" 
                   FontFamily="Arial" 
                   FontSize="30" 
                   FontWeight="Bold" 
                   Foreground="White"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" />
        </Grid>

        <Grid Grid.Row="1">
            <Border CornerRadius="15" 
                    BorderBrush="LightGray" 
                    BorderThickness="1" 
                    Background="White"
                    Width="450" 
                    Height="700" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Padding="30">

                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="Create Account" 
                               Foreground="#001a4d" 
                               FontFamily="Arial" 
                               FontSize="35"
                               FontWeight="Bold"
                               HorizontalAlignment="Center" 
                               Margin="0,0,0,20"/>

                    <TextBlock Text="Name"  
                               Foreground="#737373" 
                               FontFamily="Arial" 
                               FontSize="16"
                               Margin="20,0,0,5"/>
                    
                    <TextBox Width="350" 
                             FontSize="16" 
                             HorizontalAlignment="Left" 
                             BorderBrush="LightGray" 
                             Margin="20,0,0,25"/>

                    <TextBlock Text="Surname"  
                               Foreground="#737373" 
                               FontFamily="Arial" 
                               FontSize="16"
                               Margin="20,0,0,5"/>
                    
                    <TextBox Width="350" 
                             FontSize="16" 
                             HorizontalAlignment="Left" 
                             BorderBrush="LightGray" 
                             Margin="20,0,0,25"/>

                    <TextBlock Text="Password" 
                               Foreground="#737373"  
                               FontSize="16" 
                               FontFamily="Arial" 
                               Margin="20,0,0,5"/>
                    
                    <PasswordBox Width="350" 
                                 FontSize="16" 
                                 HorizontalAlignment="Left" 
                                 BorderBrush="LightGray" 
                                 Margin="20,0,0,25"/>

                    <TextBlock Text="Confirm Password" 
                               Foreground="#737373"  
                               FontSize="16" 
                               FontFamily="Arial" 
                               Margin="20,0,0,5"/>
                    
                    <PasswordBox Width="350" 
                                 FontSize="16" 
                                 HorizontalAlignment="Left" 
                                 BorderBrush="LightGray" 
                                 Margin="20,0,0,25"/>

                    <TextBlock Text="Role" 
                               Foreground="#737373"  
                               FontSize="16" 
                               FontFamily="Arial" 
                               Margin="20,0,0,5"/>

                    <ComboBox x:Name="RoleComboBox"
                              Width="350" 
                              FontSize="16" 
                              Background="White"
                              HorizontalAlignment="Left" 
                              BorderBrush="LightGray" 
                              Margin="20,0,0,25">
                        <ComboBoxItem Content="Lecturer" IsSelected="True"/>
                        <ComboBoxItem Content="Program Coordinator"/>
                        <ComboBoxItem Content="Manager"/>
                    </ComboBox>


                    <Button  Content="Login" 
                             FontFamily="Arial" 
                             FontWeight="Bold" 
                             Background="#001a4d"  
                             Foreground="White" 
                             Width="300" 
                             Height="45" 
                             FontSize="16"  
                             Margin="0,5,0,0" 
                             Click="Button_Click" />

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Already have an account? " 
                                   Foreground="#737373" 
                                   FontSize="14"/>
                        
                        <Button Content="Login" 
                                Background="Transparent" 
                                Foreground="#0066CC" 
                                BorderThickness="0" 
                                FontSize="14"
                                Cursor="Hand"
                                Click="Button_Click_1"/>
                    </StackPanel>
                    
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
